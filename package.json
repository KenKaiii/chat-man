{
  "name": "chat-man",
  "version": "1.0.0",
  "type": "module",
  "description": "Reusable chat UI component library with real-time streaming, markdown rendering, and beautiful UI",
  "main": "dist/chat-man.umd.js",
  "module": "dist/chat-man.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/chat-man.es.js",
      "require": "./dist/chat-man.umd.js"
    },
    "./styles": "./dist/chat-man.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "setup": "bun run setup.ts",
    "dev": "vite",
    "dev:server": "bun run server/server.ts",
    "dev:full": "bun run --bun server/server.ts & vite",
    "build": "vite build",
    "build:server": "bun build server/server.ts --outdir dist-server --target bun",
    "preview": "vite preview",
    "start": "bun run server/server.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "prepublishOnly": "bun run build"
  },
  "author": "KenKai",
  "license": "AGPL-3.0-or-later",
  "keywords": [
    "chat",
    "chat-ui",
    "react",
    "websocket",
    "streaming",
    "markdown",
    "component-library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kenkai/chat-man.git"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/react-syntax-highlighter": "^15.5.13",
    "apache-arrow": "^21.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.545.0",
    "mammoth": "^1.11.0",
    "mermaid": "^11.12.0",
    "pdf-parse": "^2.3.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.6",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tiktoken": "^1.0.22",
    "vectordb": "^0.21.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vite": "^6.3.6",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
